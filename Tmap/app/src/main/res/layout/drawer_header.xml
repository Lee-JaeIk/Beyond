<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@color/app_primary"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:id="@+id/server_change_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:drawable/stat_sys_data_bluetooth"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/server_type_info"
        android:layout_alignEnd="@+id/server_type_info" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/server_type_info"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:text="Mac Address : XXXX"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>